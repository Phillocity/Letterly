<%= link_to "Reply", new_inbox_letter_path(@inbox), class:"retro-blue m-4"%>
<ol>
<% counter = 1 %>
  <% @inbox.letters.reverse.each do |letter| %>
  <li>
  <div class="accordion" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%=counter%>">
        <button class="accordion-button <%="collapsed" if counter > 1 %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=counter%>"
          aria-expanded="true" aria-controls="collapse<%=counter%>">
          <div class="inbox-container">
            <div class="image">
              <img class="avatar-sm" src=<%=letter.sender.avatar%>>
            </div>
            <br>
            <li class="inbox-thread">
              <% if letter.sender == current_user %>
              <h2>To: <strong>Me (<%=letter.receiver.name%>)</strong></h2>
              <% else %>
              <h2>From: <strong><%=letter.receiver.name%></strong></h2>
              <% end %>
            </li>
          </div>
      </h2>
      <div id="collapse<%=counter%>" class="accordion-collapse collapse <%="show" if counter == 1 %>"
        aria-labelledby="heading<%=counter%>" data-bs-parent="#accordionExample">
        <div class="accordion-body d-flex flex-column justify-content-center align-items-center">
          <strong><%=letter.content %> </strong>
          <br>
          <button class="inbox-thread retro-blue m-4 w-50" data-bs-toggle="modal" data-bs-target="#exampleModal<%=counter%>"> Full Screen</button>
        </div>
      </div>
    </div>
    <div class="modal fade" id="exampleModal<%=counter%>" tabindex="-1" aria-labelledby="exampleModalLabel<%=counter%>" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title letter-title letter" id="exampleModalLabel<%=counter%>"><strong>Subject:</strong> <%= letter.subject.titleize %> </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body letter-body letter">
            <strong style="white-space: pre-line"><%=letter.content %> </strong>
          </div>
          <div class="modal-footer justify-content-center">
            <button type="button" class="retro" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <% counter += 1 %>
    <br>
    </li>
    <% end %>
</ol>
