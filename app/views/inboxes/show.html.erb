<%= link_to "Reply", new_inbox_letter_path(@inbox), class:"retro-blue"%>
<ol>
  <% @inbox.letters.reverse.each do |letter| %>
   <li><%= letter.sender == current_user ? "Sent to #{letter.receiver.name}" : "From Sender: #{letter.sender.name}" %>  </li>
   <strong><%=letter.content %></strong>
   <br>
  <% end %>
</ol>
