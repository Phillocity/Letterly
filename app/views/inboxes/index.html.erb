<div class=" d-flex flex-row m-4">
  <div class="w-50">
    <% if params[:edit] %>

      <div class="user wrapper-edit bg-dark mx-2 p-3"  style="position: sticky; top: 176px; ">
        <div class="user-card">
          <div class="card-left">
            <div class="avatar-large mb-3">
              <img src=<%=@me.avatar%>>
            </div>
            <div class="hobbies">
              <% @me.hobbies.each do |hobby|%>
              <div class="tag"><%= hobby.name %></div>
              <% end %>
            </div>
          </div>
          <div class="card-right ">
            <%= simple_form_for @me, url: pal_inboxes_path(@me), method: :patch do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?%>

              <h3>Name: <%= f.input :name, placeholder: @me.name, label: false %></h3>
              <h3><strong>Location: </strong><%= f.input :address, placeholder: @me.address, label: false %></h3>
              <h3><strong>Age: </strong><%= f.input :age, placeholder: @me.age, label: false %></h3>
              <h3><strong>Gender: </strong><%= f.input :gender, placeholder: @me.gender, label: false %></h3>
              <%# <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          </div>
        </div>
        <div class="w-100">

          <div class="user-card mt-3 w-100">
            <p><%= f.input :description, placeholder: @me.description %></p>
          </div>
          <div class="wrapping d-flex flex-row w-100 justify-content-between">
          <%= link_to 'Cancel', pal_inboxes_path(@me), class: "retro fader", style: "width: 35%;" %>
          <button type="submit" style="width: 35%;" class="retro-blue", method = "patch" >Submit</button>
          <%# <%= f.button :submit, class: "retro fader", method: :patch %>
          <% end %>
          </div>
        </div>
      </div>

    <% else %>

      <div class="user wrapper-edit bg-dark mx-2 p-3" style="position: sticky; top: 176px; ">
        <div class="user-card">
          <div class="card-left">
            <div class="avatar-large">
              <img src=<%=@me.avatar%>>
            </div>
            <div class="hobbies">
              <% @me.hobbies.each do |hobby|%>
              <%= hobby.name %>
              <% end %>
            </div>
          </div>
          <div class="card-right ">
            <h2><%=@me.name%></h2>
            <h3><strong>Location: </strong><%=@me.address%></h3>
            <h3><strong>Age: </strong><%=@me.age%></h3>
            <h3><strong>Gender: </strong><%=@me.gender%></h3>
          </div>
        </div>
        <div>

          <div class="user-card mt-3">
            <p><%= @me.description %></p>
          </div>

          <%# <%= link_to 'Edit', pal_inboxes_path(@me), method: :patch, class: "retro fader"  %>
          <%= form_tag pal_inboxes_path(@me), id: "form",class: "d-flex justify-content-center", method: :get do %>
          <%= hidden_field_tag "edit", "edit" %>
          <button type="submit" class="retro fader w-50">Edit</button>
          <% end %>
        </div>
      </div>

    <% end %>
  </div>


  <div class="w-50">
    <div style="border-radius:20px; width: 100%; height: 300px;" data-controller="mapbox" data-mapbox-markers-value="<%= @markers.to_json %>" data-mapbox-api-key-value="pk.eyJ1Ijoic2h1c2h5eXkiLCJhIjoiY2wwZ2kyb2M4MTJ1bjNqbXpleTRyMWp6MCJ9.yukzCb-0A-OGU2rz-1YkWw"></div>
<%# <%= ENV['MAPBOX_API_KEY'] %>
    <div class="gridify mt-2">

      <% @me.inboxes.reverse.each do |inbox| %>
        <div class="d-flex flex-column justify-content-center align-items-center text-center">
          <%= link_to pal_inbox_path(@me.id, inbox), class:"m-0 d-flex justify-content-center" do %>
            <img class="avatar-large m-2" src=<%=inbox.second_user.avatar%>>
            <%= link_to "#{inbox.second_user.name.upcase}", pal_inbox_path(@me.id, inbox), class:"h6 m-0 text-center"%>
            <% last_update = time_ago_in_words(inbox.letters.last.created_at, include_seconds: true) %>
            <p class="m-0"><%= "Last letter" %></p>
            <p><%= "#{last_update} ago" %></p>
            <% end %>
        </div>

      <% end %>

    </div>

  </div>
</div>
