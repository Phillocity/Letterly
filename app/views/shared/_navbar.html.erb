<div class="col-12 navbar navbar-expand-lg bg-light sticky-top p-4">
  <div class="col-7 container-fluid">

    <div class="logo-left d-flex align-items-center">
      <%= link_to "/", class: "navbar-brand d-flex align-items-center" do %>
      <%= image_tag "logo.png" %>
      <h1 class="halftone mx-2">LETTERLY</h1>
      <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", "/", class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Send a Letter", pals_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%if !user_signed_in? %>
            <%= link_to "Tracker", new_user_session_path, class: "nav-link" %>
          <%  else %>
           <%= link_to "Tracker", pal_inboxes_path(current_user), class: "nav-link" %>
          <% end%>
        </li>

    </div>
    <li style="list-style: none;" class="nav-item dropdown nav-link m-0 d-flex flex-column justify-content-center align-items-center">

      <%= image_tag @avatar, class: "avatar-bordered dropdown-toggle mx-3 mb-1", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <h6 class="m-0"><%= @name %></h6>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
      <% path = user_signed_in? ? pal_inboxes_path(current_user) : "/"%>
        <%= link_to "My Letters", path, class: "dropdown-item" %>

        <%if !user_signed_in? %>
             <%= link_to "Sign In", new_user_session_path, class: "dropdown-item" %>
          <%  else %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% end%>

      </div>
    </li>
    </ul>
  </div>
</div>
</div>
